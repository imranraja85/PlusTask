<!DOCTYPE html>
<html>
  <head>
    <title>Manageme</title>
    <%= stylesheet_link_tag :all %>
    <%= stylesheet_link_tag "css/redmond/jquery-ui-1.8.7.custom.css" %>
    <%= javascript_include_tag :all %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">
      jQuery.noConflict();
    </script>
  </head>
  <body>
    <div id="top-header">
      <span class="floatL"><%= image_tag("templogo.png", :class => 'floatL')%> ManageMe Dashboard</span>
      <span class="floatR"> Logged in as <%= current_user.name %>&nbsp; | &nbsp;<%= link_to "Logout", destroy_user_session_path %></span>
    </div>
    <div id="body">
      <div id="company-header">
        <%= current_user.company %>
      </div>
      <div id="nav-container">
        <%= render :partial => 'layouts/header/navigation' %>
      </div>
      <div id="content">
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end -%>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
