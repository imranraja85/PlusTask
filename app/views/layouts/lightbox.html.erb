<!DOCTYPE html>
<html lang="en">
  <head>
		<title><%#=h yield(:title).nil? ? "ManageMe" : "ManageMe: #{yield(:title)}" %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'jquery-1.4.2.min.js' %>
		<%= javascript_include_tag 'plugins/jquery.simplemodal.1.4.min.js' %>
		<%= javascript_include_tag 'plugins/ba-bbq.jquery.js' %>
		<%= javascript_include_tag 'app/lightbox2.js' %>
    <%= yield(:head) %>
    <%= yield(:javascript)%>
  </head>
  <body id="iframe">
		<%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <%- end -%>
    <%= yield %>
  </body>
</html>
